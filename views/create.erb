<h1>Create a New Article</h1>

<form method="POST" action="/create">
	<input type="text" name="name" placeholder="enter name"><br>
	<select name="category">
		<% @results.each do |category| %>
	  <option value="<%= category["id"] %>" selected><%= category["name"] %></option> 
	  <% end %>
	</select>
	<input type="text" name="headline" placeholder="enter article headline"><br>
	<input type="text" name="summary" placeholder="enter a short summary"><br>
	<input type="text" name="body" placeholder="enter article text"><br>
	<input type="submit" value="submit">
</form>

